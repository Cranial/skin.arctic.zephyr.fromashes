<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">3110</defaultcontrol>
	<onload>Skin.SetBool(colorpicker)</onload>
	<onunload>Skin.Reset(colorpicker)</onunload>
	<controls>
	    <!--<include>GlobalOverlay</include>-->
	
	<!--Animation Effect-->
        <control type="group">
	        <animation type="WindowOpen" reversible="false">
	            <effect type="slide" start="-1920,0" end="-1370,0" time="300" easing="inout" tween="cubic" />
	            <effect type="fade" start="0" end="100" time="300" />
	        </animation>
	        <animation type="WindowClose" reversible="false">
	            <effect type="slide" start="-1370,0" end="-1920,0" time="300" easing="inout" tween="cubic" />
	            <effect type="fade" start="100" end="0" time="300" />
	        </animation>
	        <left>1440</left>	

		    <control type="image">
	            <left>0</left>
	            <top>119</top>
	            <width>480</width>
	            <height>841</height>
				<texture colordiffuse="Black" border="15">common/rounded-shadow8.png</texture>
	        </control>
		    <control type="button" id="3030">
	            <left>18</left>
	            <top>130</top>
	            <width>440</width>
	            <height>50</height>
	            <onup>3010</onup>
	            <ondown>3110</ondown>
	            <onleft>Close</onleft>
	            <align>left</align>
	            <label>Palettes :</label>
	            <label2>$INFO[Window.Property(palettename)]</label2>
	            <visible>!IsEmpty(Window.Property(palettename))</visible>
				<include>DefSkinSettingMenuButton</include>
				<texturenofocus colordiffuse="Panel" border="5">common/box.png</texturenofocus>
				<texturefocus colordiffuse="FF1976D2" border="5">common/box.png</texturefocus>
	        </control>
<!-- Colours Panel -->			
			<control type="panel" id="3110">
	            <viewtype label="panel">icons</viewtype>
	            <left>60</left>
	            <top>205</top>
	            <width>380</width>
	            <height>540</height>
	            <onup>3030</onup>
	            <ondown>3010</ondown>	
	            <onright>3110</onright>
	            <onleft>60</onleft>
	            <orientation>vertical</orientation>
	            <preloaditems>4</preloaditems>
	            <pagecontrol>60</pagecontrol>
	            <itemlayout height="42.1" width="42.1">
	                 <control type="image">
	                    <width>40</width>
	                    <height>40</height>
	                    <texture>$INFO[ListItem.Icon]</texture>
	                </control>
				</itemlayout>
	            <focusedlayout height="42.1" width="42.1">
	                <control type="image">
	                    <left>2</left>
	                    <width>40</width>
	                    <height>40</height>
	                    <texture>$INFO[ListItem.Icon]</texture>
	                    <bordertexture colordiffuse="Grey" border="-2">diffuse/pvrinfo.png</bordertexture>
	                    <animation effect="zoom" center="auto" start="100" end="200" time="200" easing="inout" tween="sine">Focus</animation>
	                </control>
	            </focusedlayout>
	        </control>
		<!-- Manual Edit -->	
			<control type="button" id="3010">
	            <left>18</left>
	            <top>770</top>
	            <width>440</width>
	            <height>50</height>
	            <onup>3110</onup>	
	            <ondown>3015</ondown>
	            <onleft>Close</onleft>
	            <align>center</align>
	            <aligny>center</aligny>
				<label>Color :    $INFO[Window.Property(colorstring)]</label>
	            <font>Button</font>
				<include>DefSkinSettingMenuButton</include>
	        </control>
		<!-- Color Preview Box -->	
			<control type="image">
	            <left>45</left>
	            <top>775</top>
	            <width>40</width>
	            <height>40</height>
	            <texture>common/box.png</texture>
				<colordiffuse>FF202020</colordiffuse>
	        </control>
	        <control type="image">
	            <left>47</left>
	            <top>777</top>
	            <width>36</width>
	            <height>36</height>
	            <texture>common/box.png</texture>
	            <colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
	        </control>
		<!-- Transparency Group -->	
			<control type="group" id="3020">
	            <left>0</left>
	            <top>835</top>
	            <width>300</width>
	            <height>60</height>
	            <control type="image">
	                <width>450</width>
	                <height>30</height>
	                <texturenofocus colordiffuse="Panel" border="5">common/box.png</texturenofocus>
			        <texturefocus colordiffuse="FF1976D2" border="5">common/box.png</texturefocus>-->
					<!--<texturenofocus colordiffuse="black" border="5">common/box.png</texturenofocus>-->
	                <visible>Control.HasFocus(3015)</visible>
	            </control>
	<!-- Transparency Level -->				
				<control type="label" id="3017">
	                <left>45</left>
	                <width>260</width>
	                <height>35</height>
					<onup>3110</onup>
	                <!--<align>left</align>-->
					<font>Button</font>
					<label>$ADDON[script.skin.helper.service 32049] $INFO[Control.Getlabel(3015)]</label>-->
	            </control>
	            <control type="slider" id="3015">
	                <left>280</left>
					<onup>3011</onup>
	                <ondown>3011</ondown>
	                <width>150</width>
					<height>30</height>
					<onclick>SetFocus(3012)</onclick>
	            </control>	
	        </control>
 
			<control type="grouplist">	
	            <left>18</left>
	            <top>895</top>
	            <width>440</width>
	            <height>50</height>
	            <orientation>horizontal</orientation>
	            <itemgap>18</itemgap>
	<!-- Save Button -->			
				<control type="button" id="3012">
	                <width>210</width>
	                <height>50</height>
	                <onup>3020</onup>
	                <ondown>3030</ondown>
	                <onleft>3010</onleft>
	                <align>center</align>
	                <font>Button</font>
	                <label>190</label>
					<include>DefSkinSettingMenuButton</include>
	            </control>
	<!-- Cancel Button -->
	            <control type="button" id="3011">
	                <width>210</width>
	                <height>50</height>
	                <onup>3020</onup>
	                <ondown>3030</ondown>
	                <onleft>3010</onleft>
	                <align>center</align>
	                <!--<aligny>center</aligny>-->
	                <font>Button</font>
	                <label>222</label>
					<include>DefSkinSettingMenuButton</include>							        
	            </control>
	        </control>
	<!-- Scroll Bar -->		
			<control type="scrollbar" id="60">
                    <left>20</left>
                    <posy>206</posy>
                    <height>538</height>
                    <width>10</width>
                    <onleft>3110</onleft>
                    <onright>3110</onright>
					<texturesliderbackground border="5" colordiffuse="$VAR[ScrollbarBGColour]">scrollbar/scrollv.png</texturesliderbackground>
					<texturesliderbar border="5" colordiffuse="$VAR[ScrollbarUnFocusedColour]">scrollbar/scrollv.png</texturesliderbar>
                    <texturesliderbarfocus border="5" colordiffuse="$VAR[ScrollbarFocusedColour]">scrollbar/scrollv.png</texturesliderbarfocus>
                    <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
            </control>	
																				    	    					
		</control>									
	</controls>
</window>
